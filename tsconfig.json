{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["ESNext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "baseUrl": "./",
        "paths": {
            "@assetpack/core": [
                "packages/core/src",
            ],
            "@assetpack/cli": [
                "packages/cli/src",
            ],
            "@assetpack/plugin-*": [
                "packages/*/src",
            ]
        },
    },
    "files": ["node_modules/jest-extended/types/index.d.ts"],
    "exclude": ["dist", "node_modules"],
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "esModuleInterop": true
        },
    }
  }
