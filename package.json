{
  "name": "assetpack",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf packages/*/{dist,.testInput,.testOutput,.assetpack}",
    "lint": "eslint --cache packages scripts shared --ext .js,.ts,.mjs --max-warnings 0",
    "plugin:release": "ts-node ./scripts/release.ts",
    "build": "nx run-many --target=build --all --parallel",
    "build:force": "nx run-many --target=build --all --parallel --skip-nx-cache",
    "pretest": "npm run clean",
    "test": "nx run-many --target=test --all --parallel",
    "test:force": "nx run-many --target=test --all --parallel --skip-nx-cache",
    "test:types": "nx run-many --target=test:types --all --parallel",
    "test:types:force": "nx run-many --target=test:types --all --parallel --skip-nx-cache",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --cache --fix --max-warnings 0"
    ]
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "@pixi/eslint-config": "^4.0.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/conventional-commits-parser": "^3.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.2.4",
    "conventional-commits-parser": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "find-up": "^5.0.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.0",
    "lint-staged": "^13.1.0",
    "nx": "15.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "write-pkg": "^4.0.0"
  }
}
