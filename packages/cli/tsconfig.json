{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "module": "ES2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
